{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Typebiere index{% endtrans %}
{% endblock %}

{% block body %}
	<h1>{% trans %}Typebiere index{% endtrans %}</h1>
	<a href="{{ path('app_typebiere_new') }}" class="btn btn-primary bi bi-plus-circle">{% trans %}Create new{% endtrans %}</a>

	<div class="table-responsive">
		<table class="table table-dark table-hover">
			<thead>
				<tr>
					<th class="text-secondary bg-info text-center">{% trans %}IdType{% endtrans %}</th>
					<th class="text-secondary bg-info text-center">{% trans %}NomType{% endtrans %}</th>
					<th class="text-secondary bg-info text-center">{% trans %}actions{% endtrans %}</th>
				</tr>
			</thead>
			<tbody>
				{% for typebiere in typebieres %}
					<tr class="text-center">
						<td>{{ typebiere.idType }}</td>
						<td>{{ typebiere.nomType }}</td>
						<td>
							{# <a href="{{ path('app_typebiere_show', {'idType': typebiere.idType}) }}">{% trans %}show{% endtrans %}</a> #}
							<a href="{{ path('app_typebiere_edit', {'idType': typebiere.idType}) }}" class="btn btn-secondary btn-sm bi bi-pencil">{% trans %}edit{% endtrans %}</a>
							{{ include('typebiere/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">{% trans %}no records found{% endtrans %}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
