<form class="d-inline" method="post" action="{{ path('app_couleur_delete', {'idCouleur': couleur.idCouleur}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ couleur.idCouleur) }}">
	<button class="btn btn-danger btn-sm bi bi-trash-fill"></button>
</form>
