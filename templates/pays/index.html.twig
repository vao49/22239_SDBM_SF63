{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Pays index{% endtrans %}
{% endblock %}

{% block body %}
	<h1>{% trans %}Pays index{% endtrans %}</h1>
	<a href="{{ path('app_pays_new') }}" class="btn btn-primary">{% trans %}Create new{% endtrans %}</a>
	<table class="table table-dark table-hover">
		<thead>
			<tr>
				<th>{% trans %}IdPays{% endtrans %}</th>
				<th>{% trans %}NomPays{% endtrans %}</th>
				<th>{% trans %}NomContinent{% endtrans %}</th>
				<th>{% trans %}actions{% endtrans %}</th>
			</tr>
		</thead>
		<tbody>
			{% for pay in pays %}
				<tr>
					<td>{{ pay.idPays }}</td>
					<td>{{ pay.nomPays }}</td>
					<td>{{ pay.idContinent.nomContinent }}</td>
					<td>
						{# <a href="{{ path('app_pays_show', {'idPays': pay.idPays}) }}">show</a> #}
						<a href="{{ path('app_pays_edit', {'idPays': pay.idPays}) }}" class="btn btn-success bi bi-pencil">{% trans %}edit{% endtrans %}</a>
						{{ include('pays/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">{% trans %}no records found{% endtrans %}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
