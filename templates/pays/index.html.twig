{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Pays index{% endtrans %}
{% endblock %}

{% block body %}
	<h1>{% trans %}Pays index{% endtrans %}</h1>
	<a href="{{ path('app_pays_new') }}" class="btn btn-primary bi-plus-circle">{% trans %}Create new{% endtrans %}</a>
	<div class="table-responsive">
		<table class="table table-dark table-hover">
			<thead>
				<tr>
					<th class="text-secondary bg-info text-center">{% trans %}IdPays{% endtrans %}</th>
					<th class="text-secondary bg-info text-center">{% trans %}NomPays{% endtrans %}</th>
					<th class="text-secondary bg-info text-center">{% trans %}NomContinent{% endtrans %}</th>
					<th class="text-secondary bg-info text-center">{% trans %}actions{% endtrans %}</th>
				</tr>
			</thead>
			<tbody>
				{% for pay in pays %}
					<tr>
						<td class="text-center">{{ pay.idPays }}</td>
						<td class="text-center">{{ pay.nomPays }}</td>
						<td class="text-center">{{ pay.idContinent.nomContinent }}</td>
						<td
							class="text-center">
							{# <a href="{{ path('app_pays_show', {'idPays': pay.idPays}) }}">show</a> #}
							<a href="{{ path('app_pays_edit', {'idPays': pay.idPays}) }}" class="btn btn-secondary btn-sm bi bi-pencil">{% trans %}edit{% endtrans %}</a>
							{{ include('pays/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">{% trans %}no records found{% endtrans %}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
