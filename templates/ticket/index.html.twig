{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Ticket index{% endtrans %}
{% endblock %}

{% block body %}
	<h1>{% trans %}Ticket index{% endtrans %}</h1>
	<a href="{{ path('app_ticket_new') }}">{% trans %}Create new{% endtrans %}</a>
	<table class="table">
		<thead>
			<tr>
				<th>{% trans %}Annee{% endtrans %}</th>
				<th>{% trans %}NumeroTicket{% endtrans %}</th>
				<th>{% trans %}DateVente{% endtrans %}</th>
				<th>{% trans %}actions{% endtrans %}</th>
			</tr>
		</thead>
		<tbody>
			{% for ticket in tickets %}
				<tr>
					<td>{{ ticket.annee }}</td>
					<td>{{ ticket.numeroTicket }}</td>
					<td>{{ ticket.dateVente ? ticket.dateVente|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_ticket_show', {'annee': ticket.annee, 'numeroTicket': ticket.numeroTicket}) }}">{% trans %}show{% endtrans %}</a>
						<a href="{{ path('app_ticket_edit', {'annee': ticket.annee, 'numeroTicket': ticket.numeroTicket}) }}">{% trans %}edit{% endtrans %}</a>
						{# <a href="{{ path('app_ticket_vendre', {'annee': ticket.annee, 'numeroTicket': ticket.numeroTicket}) }}">Detail</a> #}
						<a href="{{ path('app_vendre_index', {'annee': ticket.annee, 'no': ticket.numeroTicket} ) }}">{% trans %}DÃ©tail{% endtrans %}</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">{% trans %}no records found{% endtrans %}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
