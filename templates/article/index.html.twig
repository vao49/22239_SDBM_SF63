{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Article index{% endtrans %}
{% endblock %}

{% block body %}
	<h1>{% trans %}Article index{% endtrans %}</h1>
	<a href="{{ path('app_article_new') }}" class="btn btn-primary bi bi-plus-circle">{% trans %}Create new{% endtrans %}</a>
	<div class="table-responsive">
		<table class="table table-dark table-hover">
			<thead>
				<tr>
					<th class="text-secondary bg-info text-center">{% trans %}IdArticle{% endtrans %}</th>
					<th class="text-secondary bg-info text-center">{% trans %}NomArticle{% endtrans %}</th>
					<th class="text-secondary bg-info text-center">{% trans %}PrixAchat{% endtrans %}</th>
					<th class="text-secondary bg-info text-center">{% trans %}Volume{% endtrans %}</th>
					<th class="text-secondary bg-info text-center">{% trans %}Titrage{% endtrans %}</th>
					<th class="d-none d-lg-table-cell text-secondary bg-info text-center">{% trans %}Type{% endtrans %}</th>
					<th class="d-none d-md-table-cell text-secondary bg-info text-center">{% trans %}Couleur{% endtrans %}</th>
					<th class="d-none d-lg-table-cell text-secondary bg-info text-center">{% trans %}Marque{% endtrans %}</th>
					<th class="text-secondary bg-info text-center">{% trans %}actions{% endtrans %}</th>
				</tr>
			</thead>
			<tbody>
				{% for article in articles %}
					<tr>
						<td class="text-center">{{ article.idArticle }}</td>
						<td class="text-center">{{ article.nomArticle }}</td>
						<td class="text-center">{{ article.prixAchat }}</td>
						<td class="text-center">{{ article.volume }}</td>
						<td class="text-center">{{ article.titrage }}</td>
						<td class="d-none d-lg-table-cell text-center">
							{% if article.idType != null %}
								{{ article.idType.nomType }}
							{% else %}
								{% trans %}NC{% endtrans %}
							{% endif %}
						</td>
						<td class="d-none d-md-table-cell text-center">
							{% if article.idCouleur != null %}
								{{ article.idCouleur.nomCouleur }}
							{% else %}
								{% trans %}NC{% endtrans %}
							{% endif %}
						</td>
						<td class="d-none d-lg-table-cell text-center">
							{% if article.idMarque != null %}
								{{ article.idMarque.nomMarque }}
							{% else %}
								{% trans %}NC{% endtrans %}
							{% endif %}
						</td>
						<td
							class="text-center">
							{# <a href="{{ path('app_article_show', {'idArticle': article.idArticle}) }}">{% trans %}show{% endtrans %}</a> #}
							<a href="{{ path('app_article_edit', {'idArticle': article.idArticle}) }}" class="btn btn-secondary bi bi-pencil">{% trans %}edit{% endtrans %}</a>
							{{ include('article/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">{% trans %}no records found{% endtrans %}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
