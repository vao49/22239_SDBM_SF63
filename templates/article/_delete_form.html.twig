<form class="d-inline" method="post" action="{{ path('app_article_delete', {'idArticle': article.idArticle}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.idArticle) }}">
	<button class="btn btn-danger btn-sm bi bi-trash">{% trans %}Delete{% endtrans %}</button>
</form>
