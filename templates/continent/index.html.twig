{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Liste des Continents{% endtrans %}
{% endblock %}

{% block body %}
	<h1>{% trans %}Liste des Continents{% endtrans %}</h1>
	<a href="{{ path('app_continent_new') }}">
		<button class="btn btn-info">
			{{ button_label|default('Create new')|trans }}
		</button>
	</a>
	<table class="table table-dark table-hover">
		<thead>
			<tr>
				<th>{% trans %}IdContinent{% endtrans %}</th>
				<th>{% trans %}NomContinent{% endtrans %}</th>
				<th>{% trans %}actions{% endtrans %}</th>
			</tr>
		</thead>
		<tbody>
			{% for continent in continents %}
				<tr>
					<td>{{ continent.idContinent }}</td>
					<td>{{ continent.nomContinent }}</td>
					<td>
						<a
							href="{{ path('app_continent_show', {'idContinent': continent.idContinent}) }}">
							{# {% trans %}show{% endtrans %} #}
							<button class="btn btn-warning">
								{{ button_label|default('show')|trans }}
							</button>
						</a>
						<a
							href="{{ path('app_continent_edit', {'idContinent': continent.idContinent}) }}">
							{# {% trans %}edit{% endtrans %} #}
							<button class="btn btn-primary">
								{{ button_label|default('edit')|trans }}
							</button>
						</a>
						{{ include('continent/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">{% trans %}no records found{% endtrans %}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
